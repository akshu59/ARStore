package com.akshu.springboot2.jpahibernate;

import java.util.List;
import java.util.Map;
import java.util.Optional;
import java.util.function.Consumer;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.akshu.springboot2.jpahibernate.pojo.Product;
import com.akshu.springboot2.jpahibernate.repository.SpringJpaRepo;

import jakarta.annotation.PostConstruct;

@RestController
@RequestMapping("/test")
public class CourseRestController {

	@Autowired
	private SpringJpaRepo springJpaRepo;
	
	@PostConstruct
	public void postConstruct() {
	    System.out.println("asdfgh"+springJpaRepo.findAll());
	}

	@GetMapping("/courses")
	public ResponseEntity<Map<String,Object>> getAll() {
		List<Product> list = springJpaRepo.findAll();
		
		return ResponseEntity.ok(Map.of("data",list));
	}

	@GetMapping("/courses/{id}")
	public Product getOne(@PathVariable Long id) {
		return springJpaRepo.findById(id).get();
	}

	@PostMapping("/course")
	public void save(@RequestBody Product course) {
		springJpaRepo.save(course);
	}

	@PostMapping("/courses")
	public void saveList(@RequestBody List<Product> courses) {
		System.out.println("reading "+courses.toString());
		//springJpaRepo.saveAll(courses);
	}
	
	@PutMapping("/course/{id}")
	public void updateCourse(@PathVariable Long id, @RequestBody Product course) {
		course.setId(id);
		springJpaRepo.save(course);

	}

	@DeleteMapping("/course/{id}")
	public void deleteCourse(@PathVariable Long id) {
		springJpaRepo.deleteById(id);

	}

}
